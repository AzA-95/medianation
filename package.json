{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "nuxt dev --dotenv .env.dev",
		"devWithProdApi": "nuxt dev --dotenv .env.prod",
		"build": "nuxt build --dotenv .env.prod",
		"buildWithDevApi": "nuxt build --dotenv .env.dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
		"lint:js": "eslint --ext \".js,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue\" .",
		"lint:style": "stylelint \"**/*.{css,scss,sass,vue}\"",
		"lint:prettier": "prettier --check .",
		"lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
		"lintfix": "prettier --write --list-different . && npm run lint:js -- --fix && npm run lint:style -- --fix",
		"format": "prettier --write .",
		"clear-shims:vue": "node clear-shims.vue.mjs",
		"projectStructure:check": "eslint --no-eslintrc -c .eslintrc-structure.json --parser ./node_modules/eslint-plugin-project-structure/dist/parser.js --rule project-structure/file-structure:error --ext .ts,.scss,.vue .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@nuxt/devtools": "latest",
		"@nuxtjs/eslint-config-typescript": "^12.1.0",
		"@types/mapbox-gl": "^3.1.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"husky": "^8.0.0",
		"nuxt": "^3.11.2",
		"postcss-px-to-viewport-with-min-width": "github:AzA-95/postcss-px-to-viewport-with-min-width",
		"prettier": "^3.1.0",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-standard-scss": "^11.1.0",
		"stylelint-config-standard-vue": "^1.0.0",
		"typescript": "^5.2.2",
		"vue": "^3.3.8",
		"vue-router": "^4.2.5",
		"vue-tsc": "^1.8.22"
	},
	"dependencies": {
		"@fancyapps/ui": "^5.0.33",
		"@pinia/nuxt": "^0.5.1",
		"countup.js": "^2.8.0",
		"eslint-plugin-project-structure": "^1.4.7",
		"mapbox-gl": "^3.2.0",
		"mitt": "^3.0.1",
		"modern-normalize": "^2.0.0",
		"pinia": "^2.1.7",
		"swiper": "^11.0.7",
		"vee-validate": "^4.12.2"
	}
}
